import PostGrid from './components/PostGrid.astro'
import Pagination from './components/Pagination.astro'

interface Props {
    page: Page<CollectionEntry<'blog'>>
    tags: string[]
    tagCount: Record<string, number>
}

const { page, tags, tagCount } = Astro.props
