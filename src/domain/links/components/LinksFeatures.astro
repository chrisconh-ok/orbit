---
import { Icon } from 'astro-icon/components'

const LinksFeaturesArray = [
	{
		name: 'Nuestro Blog',
		href: '/blog',
		icon: 'fa6-brands:blogger-b'
	},
	{
		name: 'Nuestro Recursos',
		href: '/resources',
		icon: 'mdi:folder'
	}
]

const layoutStyles ='flex flex-row justify-center items-center px-5 py-3 w-[90%] lg:w-1/3 '
const defaultStyles = 'text-base font-bold text-center rounded-lg focus:ring-4 focus:outline-none duration-300';
const colorStyles = 'text-theme-buttonTextCharleston hover:text-theme-buttonHoverTextCharleston focus:ring-theme-buttonHoverRingCharleston bg-theme-buttonBackground hover:bg-theme-buttonHoverBackground';

---

<div class="text-center mt-12 flex flex-col gap-4 mx-auto items-center">
	{
		LinksFeaturesArray.map(
			(link) => (
				<a
					href={link.href}
					class={`${defaultStyles} ${layoutStyles} ${colorStyles}`}
					aria-label={link.name}
				>
					<Icon name={link.icon} class="text-xl" />
					<span class="ml-2">{link.name}</span>
				</a>
			)
		)
	}
</div>
