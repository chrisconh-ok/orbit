---
interface Props {
    class?: string;
    id?: string;
  }
  
const { class: className = '', id } = Astro.props;

// Estilos base para todos los headings
const OuterContainerStyles = 'bg-theme-siteBackground';
const innerContainerStyles = 'py-12 px-4 mx-auto max-w-screen-xl lg:py-20 lg:px-6'

const combinedStyles = `${OuterContainerStyles} ${className}`;
---
  
{
    <section class={combinedStyles} {...id && { id }}>
        <div class={innerContainerStyles}>
            <slot/>
        </div>
    </section>
}

