---
interface Props {
    class?: string;
    id?: string;
  }
  
const { class: className = '', id } = Astro.props;

const mainStyles="bg-theme-siteBackground";
const innerContainerStyles="py-12 px-4 mx-auto max-w-screen-xl lg:py-20 lg:px-6";

const combinedStyles = `${mainStyles} ${className}`;
---


<main class={combinedStyles}>
    <div class={innerContainerStyles}>
        <slot />
    </div>
</main>