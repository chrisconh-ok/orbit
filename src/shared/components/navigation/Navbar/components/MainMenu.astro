---
const currentPath = Astro.url.pathname

const links = [
	{ name: 'Inicio', href: '/' },
	{ name: 'Blog', href: '/blog' },
	{ name: 'Recursos', href: '/resources' },
	{ name: 'Cursos', href: '/courses' },
	{ name: 'Acerca de', href: '/about' }
]
---

<ul
	class="mt-8 flex flex-col rounded-lg border border-brand-charleston-300 bg-brand-charleston p-4 font-medium md:mt-0
		md:flex-row md:space-x-8 md:border-0 md:bg-brand-charleston md:p-0 rtl:space-x-reverse"
>
	{
		links.map((link) => (
			<li>
				<a
					href={link.href}
					class={`block rounded px-3 py-2 my-2 ${
						currentPath === link.href
							? 'text-brand-turquoise font-bold'
							: 'text-theme-textPrimary hover:bg-transparent hover:text-brand-turquoise'
						}`}
				>
					{link.name}
				</a>
			</li>
		))
	}
</ul>
