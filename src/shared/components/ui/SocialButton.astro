---
import { Icon } from 'astro-icon/components'

interface Props {
    name: string;
    href: string;
    icon: string;
    class?: string;
}

const { name, href, icon, class: className = '' } = Astro.props;

const layoutStyles ='flex items-center justify-center w-14 h-14 focus:ring-2 focus:outline-none'
const defaultStyles = 'text-theme-buttonTextCharleston hover:text-theme-buttonHoverTextCharleston focus:ring-theme-buttonHoverRingCharleston bg-theme-buttonBackground hover:bg-theme-buttonHoverBackground rounded-full duration-300';
---

<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class={`${defaultStyles} ${layoutStyles} ${className}`}
    aria-label={name}
>
    <Icon name={icon} class="text-2xl" />
</a>