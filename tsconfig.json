{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*.astro"],
      "@layouts/*": ["src/layouts/*.astro"],
      "@pages/*": ["src/pages/*.astro"],
      "@styles/*": ["src/styles/*.css"],
      "@content/*": ["src/content/*"]
    }
  }
}
